---
export interface Props {
  type: 'carrier' | 'experience' | 'coverage' | 'licensed';
  compact?: boolean;
  showIcon?: boolean;
}

const { type, compact = false, showIcon = true } = Astro.props;
---

<div class={`trust-badge-pro ${compact ? 'compact' : 'full'} ${type}`}>
  {showIcon && (
    <div class="icon-wrapper">
      {type === 'carrier' && (
        <svg class="badge-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      )}
      {type === 'experience' && (
        <svg class="badge-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
      )}
      {type === 'coverage' && (
        <svg class="badge-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
      )}
      {type === 'licensed' && (
        <svg class="badge-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 11l3 3L22 4"></path>
          <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11"></path>
        </svg>
      )}
    </div>
  )}
  
  <div class="trust-content">
    <strong class="trust-text">
      {type === 'carrier' && 'A+ Rated Carriers'}
      {type === 'experience' && 'Since 2005'}
      {type === 'coverage' && 'All 50 States'}
      {type === 'licensed' && 'NPN #8608479'}
    </strong>
    {!compact && (
      <span class="trust-subtext">
        {type === 'carrier' && 'Financial Strength You Can Trust'}
        {type === 'experience' && '20 Years of Crane Insurance Expertise'}
        {type === 'coverage' && 'Nationwide Coverage Available'}
        {type === 'licensed' && 'Fully Licensed Insurance Agency'}
      </span>
    )}
  </div>
</div>

<style>
  .trust-badge-pro {
    display: inline-flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1.5rem;
    position: relative;
    overflow: hidden;
    
    /* Glass morphism effect with pill shape and transparency */
    background: rgba(255, 255, 255, 0.65);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.25);
    border-radius: 9999px; /* Full rounded for pill shape */
    box-shadow: 
      0 4px 6px -1px rgba(0, 0, 0, 0.05),
      0 2px 4px -2px rgba(0, 0, 0, 0.05),
      inset 0 2px 4px 0 rgba(255, 255, 255, 0.5);
    
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .trust-badge-pro:hover {
    transform: translateY(-2px);
    box-shadow: 
      0 10px 15px -3px rgba(0, 0, 0, 0.08),
      0 4px 6px -4px rgba(0, 0, 0, 0.05),
      inset 0 2px 4px 0 rgba(255, 255, 255, 0.6);
  }
  
  .trust-badge-pro.compact {
    padding: 0.625rem 1.125rem;
    gap: 0.625rem;
  }
  
  /* Icon wrapper with glass circle */
  .icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.3));
    box-shadow: 
      0 2px 8px rgba(0, 0, 0, 0.03),
      inset 0 1px 2px rgba(255, 255, 255, 0.7);
    flex-shrink: 0;
  }
  
  .trust-badge-pro.compact .icon-wrapper {
    width: 32px;
    height: 32px;
  }
  
  /* Monochrome icons with accent color */
  .badge-icon {
    width: 20px;
    height: 20px;
    color: #fbbf24; /* construction-yellow */
    stroke-width: 2.5;
  }
  
  .trust-badge-pro.compact .badge-icon {
    width: 16px;
    height: 16px;
  }
  
  /* Subtle accent colors for different badge types */
  .trust-badge-pro.carrier .badge-icon {
    color: #fbbf24; /* Yellow for excellence */
  }
  
  .trust-badge-pro.experience .badge-icon {
    color: #60a5fa; /* Blue for trust/time */
  }
  
  .trust-badge-pro.coverage .badge-icon {
    color: #34d399; /* Green for coverage */
  }
  
  .trust-badge-pro.licensed .badge-icon {
    color: #a78bfa; /* Purple for official */
  }
  
  /* Add subtle accent glow on hover */
  .trust-badge-pro.carrier:hover .icon-wrapper {
    background: linear-gradient(135deg, rgba(251, 191, 36, 0.1), rgba(255, 255, 255, 0.5));
  }
  
  .trust-badge-pro.experience:hover .icon-wrapper {
    background: linear-gradient(135deg, rgba(96, 165, 250, 0.1), rgba(255, 255, 255, 0.5));
  }
  
  .trust-badge-pro.coverage:hover .icon-wrapper {
    background: linear-gradient(135deg, rgba(52, 211, 153, 0.1), rgba(255, 255, 255, 0.5));
  }
  
  .trust-badge-pro.licensed:hover .icon-wrapper {
    background: linear-gradient(135deg, rgba(167, 139, 250, 0.1), rgba(255, 255, 255, 0.5));
  }
  
  /* Content styling */
  .trust-content {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }
  
  .trust-text {
    font-size: 0.9375rem;
    color: #1a1a1a;
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.2;
  }
  
  .trust-badge-pro.compact .trust-text {
    font-size: 0.875rem;
  }
  
  .trust-subtext {
    font-size: 0.75rem;
    color: #6b7280;
    font-weight: 400;
    letter-spacing: -0.005em;
    line-height: 1.3;
  }
  
  /* Responsive design */
  @media (max-width: 640px) {
    .trust-badge-pro {
      padding: 0.75rem 1rem;
    }
    
    .icon-wrapper {
      width: 36px;
      height: 36px;
    }
    
    .badge-icon {
      width: 18px;
      height: 18px;
    }
  }
  
  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .trust-badge-pro {
      background: rgba(30, 30, 30, 0.65);
      border-color: rgba(255, 255, 255, 0.08);
    }
    
    .icon-wrapper {
      background: linear-gradient(135deg, rgba(40, 40, 40, 0.7), rgba(60, 60, 60, 0.3));
    }
    
    .trust-text {
      color: #f9fafb;
    }
    
    .trust-subtext {
      color: #9ca3af;
    }
  }
</style>