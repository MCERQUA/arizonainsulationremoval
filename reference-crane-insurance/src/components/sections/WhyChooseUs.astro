      <TrustBadgeProfessional type="carrier" />
      <TrustBadgeProfessional type="experience" />
      <TrustBadgeProfessional type="coverage" />
      <TrustBadgeProfessional type="licensed" />
    </div>

    <!-- Main Content Grid -->
    <div class="grid lg:grid-cols-2 gap-12 mb-16">
      <!-- Left Column - Key Differentiators -->
      <div>
        <h3 class="text-2xl font-bold text-steel-black mb-8">
          Our Competitive Advantages
        </h3>
        <div class="space-y-6">
          {reasons.map((reason) => (
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 bg-construction-yellow/20 rounded-xl flex items-center justify-center text-2xl">
                {reason.icon}
              </div>
              <div>
                <h4 class="font-bold text-steel-black mb-1">{reason.title}</h4>
                <p class="text-iron-gray text-sm">{reason.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Right Column - Carrier Strength -->
      <div>
        <div class="bg-gradient-to-br from-construction-yellow/10 to-construction-yellow/5 rounded-3xl p-8 h-full">
          <h3 class="text-2xl font-bold text-steel-black mb-8">
            Carrier Strength & Stability
          </h3>
          
          <!-- Carrier Rating Display -->
          <div class="bg-white rounded-2xl p-6 mb-6 shadow-sm">
            <div class="flex items-center gap-4 mb-4">
              <div class="text-4xl font-bold text-construction-yellow">A+</div>
              <div>
                <div class="font-bold text-steel-black">Superior Rating</div>
                <div class="text-sm text-iron-gray">A.M. Best Financial Strength</div>
              </div>
            </div>
            <p class="text-sm text-iron-gray">
              Our carrier partners maintain the highest financial ratings, ensuring they have the resources 
              to pay claims promptly and fully, even for catastrophic losses.
            </p>
          </div>

          <!-- Carrier Features List -->
          <div class="space-y-3">
            <h4 class="font-bold text-steel-black mb-4">What This Means for You:</h4>
            {carrierFeatures.map((feature) => (
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-sm text-iron-gray">{feature}</span>
              </div>
