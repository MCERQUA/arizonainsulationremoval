<section class="section-padding bg-gradient-to-br from-aluminum via-white to-aluminum" id="why-choose-us">
  <div class="container-padding max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="heading-lg text-steel-black mb-4">
