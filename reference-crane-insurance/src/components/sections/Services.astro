---
import GlassCard from '../ui/GlassCard.tsx';
import GlassButton from '../ui/GlassButton.tsx';
import DetailedCoverageEnhanced from '../ui/DetailedCoverageEnhanced.tsx';
import TrustBadgeProfessional from '../ui/TrustBadgeProfessional.astro';

const services = [
  {
    title: 'General Liability Insurance',
    description: 'Comprehensive liability coverage protecting against property damage and bodily injury during crane operations.',
    features: ['$1M-$10M+ coverage limits', 'Third-party protection', 'Legal defense coverage', 'Project requirements compliance'],
    image: '/images/services/general-liability.jpg',
    imageAlt: 'Construction workers in safety gear at crane operation site'
  },
  {
    title: 'Riggers Liability Coverage',
    description: 'Specialized "on the hook" coverage protecting property in your care, custody & control during lifting operations.',
    features: ['Care, custody & control coverage', '"On the hook" protection', 'Transit & rigging coverage', 'Boom & cable damage protection'],
    image: '/images/services/riggers-liability.jpg',
    imageAlt: 'Crane hook lifting industrial equipment during rigging operations'
  },
  {
    title: 'Equipment Physical Damage',
    description: 'All-risk protection for your crane equipment including upset, overturn, and boom damage coverage.',
    features: ['Upset or overturn coverage', 'Boom damage protection', 'Wire rope & cable failure', 'Rental reimbursement available'],
    image: '/images/services/equipment-damage.jpg',
    imageAlt: 'Professional mobile crane equipment for physical damage coverage'
  }
];
---

<section class="section-padding bg-concrete-gray" id="services">
  <!-- Services Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Service",
    "provider": {
      "@type": "InsuranceAgency",
      "name": "Heavy Crane Insurance - A Division of Contractors Choice Agency"
    },
    "serviceType": "Crane Insurance Services",
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Crane Insurance Coverage Types",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "@id": "https://heavycraneinsurance.com/general-liability",
            "name": "General Liability Insurance",
            "description": "Comprehensive liability coverage protecting against property damage and bodily injury during crane operations.",
            "category": "Insurance",
            "serviceType": "General Liability Coverage",
            "offers": {
              "@type": "Offer",
              "priceCurrency": "USD",
              "priceSpecification": {
                "@type": "PriceSpecification",
                "minPrice": "1000000",
                "maxPrice": "10000000",
                "priceCurrency": "USD",
                "description": "$1M-$10M+ coverage limits"
              }
            }
          }
        },
        {
          "@type": "Offer", 
          "itemOffered": {
            "@type": "Service",
            "@id": "https://heavycraneinsurance.com/riggers-liability",
            "name": "Riggers Liability Coverage",
            "description": "Specialized coverage for property of others while on the hook during lifting operations.",
            "category": "Insurance",
            "serviceType": "Riggers Liability Coverage"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service", 
            "@id": "https://heavycraneinsurance.com/equipment-coverage",
            "name": "Equipment Physical Damage",
            "description": "Complete protection for your crane equipment against damage, theft, and total loss.",
            "category": "Insurance",
            "serviceType": "Equipment Physical Damage Coverage",
            "offers": {
              "@type": "Offer",
              "priceCurrency": "USD",
              "priceSpecification": {
                "@type": "PriceSpecification",
                "description": "1-3% of equipment value annually"
              }
            }
          }
        }
      ]
    }
  }
  </script>

  <div class="container-padding max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="heading-lg text-steel-black mb-4">
        Crane Insurance Coverage Types
      </h2>
      <p class="body-text text-iron-gray max-w-2xl mx-auto">
        Specialized insurance solutions designed for crane operators, rental companies, and construction firms
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
      {services.map((service, index) => (
        <div 
          class="animate-slide-up" 
          style={`animation-delay: ${index * 0.15}s`}
        >
          <!-- Modern card with darker background and shadow -->
          <div class="
            group relative h-full
            bg-machinery-gray/40 
            rounded-3xl p-4
            shadow-lg hover:shadow-xl 
            transition-all duration-500 
            transform hover:-translate-y-1
            overflow-hidden
          ">
            <!-- Glass effect border -->
            <div class="absolute inset-0 bg-gradient-to-br from-white/10 to-transparent rounded-3xl"></div>
            
            <!-- Inner container -->
            <div class="relative h-full flex flex-col">
              <!-- Service Image -->
              <div class="relative mb-4 rounded-2xl aspect-[4/3] overflow-hidden bg-gradient-to-br from-construction-yellow/20 to-machinery-gray/30">
                <img 
                  src={service.image}
                  alt={service.imageAlt}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                  loading="lazy"
                />
                <!-- Decorative overlay -->
                <div class="absolute inset-0 bg-gradient-to-t from-charcoal-black/20 to-transparent opacity-60"></div>
              </div>
              
              <!-- Content container - fixed bottom styling -->
              <div class="bg-aluminum rounded-2xl p-5 sm:p-6 flex-grow shadow-inner">
                <div class="space-y-4">
                  <h3 class="text-xl sm:text-2xl font-bold text-steel-black">
                    {service.title}
                  </h3>
                  
                  <p class="text-iron-gray leading-relaxed">
                    {service.description}
                  </p>
                  
                  <div class="pt-2">
                    <ul class="space-y-2.5">
                      {service.features.map((feature) => (
                        <li class="flex items-start gap-3">
                          <span class="text-construction-yellow mt-0.5 flex-shrink-0">âœ“</span>
                          <span class="text-iron-gray text-sm">{feature}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Trust Badges Section -->
    <div class="flex flex-wrap justify-center gap-4 mt-12 mb-16">
      <TrustBadgeProfessional type="carrier" />
      <TrustBadgeProfessional type="experience" />
      <TrustBadgeProfessional type="coverage" />
      <TrustBadgeProfessional type="licensed" />
    </div>
    
    <!-- Detailed Coverage Component -->
    <div class="mt-16 mb-16">
      <div class="text-center mb-12">
        <h2 class="heading-lg text-steel-black mb-4">
          Comprehensive Coverage Details
        </h2>
        <p class="body-text text-iron-gray max-w-3xl mx-auto">
          Explore our complete range of coverage options, specialized endorsements, and protection limits. 
          We offer the same comprehensive coverage as major carriers with personalized service you won't find elsewhere.
        </p>
      </div>
      
      <DetailedCoverageEnhanced client:load className="max-w-6xl mx-auto" />
    </div>
    
    <div class="text-center mt-16">
      <p class="text-iron-gray mb-6 text-lg">
        Ready to protect your crane operations with specialized coverage from industry experts?
      </p>
      <GlassButton 
        href="#contact-form"
        variant="primary"
        size="lg"
        client:visible
      >
        Get Your Free Quote
      </GlassButton>
    </div>
  </div>
  
  <!-- Enhanced Structured Data for Coverage Details -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "InsuranceAgency",
    "@id": "https://heavycraneinsurance.com/#agency",
    "name": "Heavy Crane Insurance",
    "description": "Specialized crane insurance with $1M-$10M+ coverage limits from A+ rated carriers",
    "url": "https://heavycraneinsurance.com",
    "telephone": "844-967-5247",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "12220 E Riggs Rd",
      "addressLocality": "Chandler",
      "addressRegion": "AZ",
      "postalCode": "85249",
      "addressCountry": "US"
    },
    "areaServed": {
      "@type": "Country",
      "name": "United States"
    },
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Comprehensive Crane Insurance Coverage",
      "itemListElement": [
        {
          "@type": "Offer",
          "name": "General Liability Insurance",
          "description": "Third-party protection with defense costs outside limits",
          "priceSpecification": {
            "@type": "PriceSpecification",
            "price": "$1M-$10M+ per occurrence"
          }
        },
        {
          "@type": "Offer",
          "name": "Riggers Liability (On the Hook)",
          "description": "Care, custody & control coverage for property being lifted",
          "priceSpecification": {
            "@type": "PriceSpecification",
            "price": "$250K-$5M+ per occurrence"
          }
        },
        {
          "@type": "Offer",
          "name": "Equipment Physical Damage",
          "description": "All-risk protection including upset, overturn, and boom damage",
          "priceSpecification": {
            "@type": "PriceSpecification",
            "price": "1-3% of equipment value"
          }
        },
        {
          "@type": "Offer",
          "name": "Specialized Endorsements",
          "description": "Pollution, primary & non-contributory, waiver of subrogation",
          "priceSpecification": {
            "@type": "PriceSpecification",
            "price": "Custom pricing available"
          }
        }
      ]
    },
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "4.9",
      "reviewCount": "847",
      "bestRating": "5"
    },
    "sameAs": [
      "https://www.contractorschoiceagency.com"
    ]
  }
  </script>
</section>

<style>
  /* Ensure consistent card heights */
  .grid > div {
    display: flex;
  }
  
  .grid > div > div {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  
  /* Enhanced shadow effects */
  .shadow-lg {
    box-shadow: 0 10px 25px -5px rgba(26, 26, 26, 0.3), 0 10px 10px -5px rgba(26, 26, 26, 0.15);
  }
  
  .shadow-xl:hover {
    box-shadow: 0 20px 35px -5px rgba(26, 26, 26, 0.35), 0 15px 15px -5px rgba(26, 26, 26, 0.2);
  }
  
  /* Smooth animations */
  .animate-slide-up {
    opacity: 0;
    animation: slideUp 0.6s ease-out forwards;
  }
</style>
