---
import { getCollection } from 'astro:content';
import GlassButton from '../ui/GlassButton.tsx';
import GlassCard from '../ui/GlassCard.tsx';

// Get recent blog posts (limit to 3 for homepage)
const blogPosts = await getCollection('blog');
const recentPosts = blogPosts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);

// Function to format date
function formatDate(date: Date) {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
}
---

<section class="section-padding bg-charcoal-black" id="blog">
  <div class="container-padding max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-4xl lg:text-5xl font-bold text-aluminum mb-4">
        Latest Insights
      </h2>
      <p class="text-lg text-aluminum/80 max-w-2xl mx-auto">
        Expert tips and industry insights for crane operators and construction professionals
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {recentPosts.map((post, index) => (
        <div class="animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
          <GlassCard client:visible variant="light">
            <article class="space-y-4">
              <div class="aspect-video bg-gradient-to-br from-machinery-gray to-dark-steel rounded-2xl overflow-hidden group relative">
                {post.data.image ? (
                  <img 
                    src={post.data.image} 
                    alt={post.data.imageAlt || post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center">
                    <svg class="w-12 h-12 text-aluminum/60" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                    </svg>
                  </div>
                )}
                <div class="absolute inset-0 bg-gradient-to-t from-dark-steel/60 to-transparent"></div>
              </div>
              
              <div class="space-y-3">
                <div class="flex items-center gap-4 text-sm text-aluminum/60">
                  <span>{formatDate(post.data.pubDate)}</span>
                  <span class="text-construction-yellow">â€¢</span>
                  <span>{post.data.readTime || '5 min read'}</span>
                </div>
                
                <h3 class="text-xl font-bold text-aluminum group-hover:text-construction-yellow transition-colors duration-300">
                  {post.data.title}
                </h3>
                
                <p class="text-aluminum/70 line-clamp-3">
                  {post.data.description}
                </p>
              </div>
              
              <GlassButton
                href={`/blog/${post.slug}`}
                size="sm"
                variant="outline"
                className="w-full !border-construction-yellow/30 !text-construction-yellow hover:!bg-construction-yellow/10"
                client:visible
              >
                Read More
              </GlassButton>
            </article>
          </GlassCard>
        </div>
      ))}
      
      <!-- Show "Coming Soon" cards if we have fewer than 3 posts -->
      {Array.from({ length: Math.max(0, 3 - recentPosts.length) }, (_, i) => (
        <div class="animate-slide-up" style={`animation-delay: ${(recentPosts.length + i) * 0.1}s`}>
          <GlassCard client:visible variant="light">
            <article class="space-y-4 opacity-60">
              <div class="aspect-video bg-gradient-to-br from-machinery-gray/30 to-dark-steel/30 rounded-2xl flex items-center justify-center">
                <span class="text-aluminum/40 font-medium text-lg">Coming Soon</span>
              </div>
              
              <div class="space-y-3">
                <div class="h-4 bg-aluminum/10 rounded w-3/4"></div>
                <div class="h-6 bg-aluminum/10 rounded"></div>
                <div class="h-16 bg-aluminum/10 rounded"></div>
              </div>
            </article>
          </GlassCard>
        </div>
      ))}
    </div>

    <!-- View All Blog Posts Button -->
    <div class="text-center mt-12">
      <GlassButton
        href="/blog"
        size="lg"
        variant="outline"
        className="!border-construction-yellow !text-construction-yellow hover:!bg-construction-yellow/10"
        client:visible
      >
        View All Articles
      </GlassButton>
    </div>
  </div>
</section>
